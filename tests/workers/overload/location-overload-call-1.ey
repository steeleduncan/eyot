// this tests we can gpu/cpu overload at the point of calling
import std::runtime

cpu fn mult(val i64) i64 {
   return val * 2
}

gpu fn mult(val i64) i64 {
   return val * 3
}

fn domult(val i64) i64 {
   return mult(val)
}

cpu fn main() {
	if not runtime::can_use_gpu() {
		print_ln("ey-test-reserved-pass")
        return
    }

    let c = cpu domult
    send(c, [i64]{ 2, 3, 4 })
    for v: drain(c) {
        print_ln("cpu: ", v)
    }

    let g = gpu domult
    send(g, [i64]{ 2, 3, 4 })
    for v: drain(g) {
        print_ln("gpu: ", v)
    }
}

